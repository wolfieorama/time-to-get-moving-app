<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.johnmunyi.getupandwalk.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="379dp"
            android:layout_height="153dp"
            android:layout_above="@+id/relativeLayout3"
            android:layout_alignStart="@+id/relativeLayout3"
            android:layout_marginBottom="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="33dp">

            <EditText
                android:id="@+id/timeToTrack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:ems="10"
                android:inputType="number"
                android:hint="Enter minutes to track"/>

            <Button
                android:id="@+id/setTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="14dp"
                android:text="Set Time" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="379dp"
            android:layout_height="133dp"
            android:layout_alignStart="@+id/relativeLayout2"
            android:layout_centerVertical="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/relativeLayout3">

            <Button
                android:id="@+id/trackOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/trackingOff"
                android:layout_alignBottom="@+id/trackingOff"
                android:layout_alignParentStart="true"
                android:layout_marginStart="18dp"
                android:text="Tracking On" />

            <Button
                android:id="@+id/trackingOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="21dp"
                android:text="Tracking Off" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="379dp"
            android:layout_height="133dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="69dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="404dp"
            android:id="@+id/relativeLayout2">

            <Button
                android:id="@+id/vibrateOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/vibrateOff"
                android:layout_alignBottom="@+id/vibrateOff"
                android:layout_alignParentStart="true"
                android:layout_marginStart="27dp"
                android:text="Vibrate On" />

            <Button
                android:id="@+id/vibrateOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="36dp"
                android:layout_marginEnd="22dp"
                android:text="Vibrate Off" />
        </RelativeLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
